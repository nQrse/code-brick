{
  "name": "brick-cli",
  "version": "0.1.0",
  "description": "A framework-agnostic CLI tool for managing reusable code templates",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "brick": "dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --watch",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "templates",
    "code-generator",
    "scaffolding",
    "boilerplate",
    "brick"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "picocolors": "^1.0.0",
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ]
}
